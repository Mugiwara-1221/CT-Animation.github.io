{
  "$schema": "https://schemas.azure.com/swa-database-connection/2024-05-01/schema.json",
  "data-source": {
    "database-type": "cosmosdb_nosql",
    "connection-string": "@env('COSMOS_DB_CONNECTION')",
    "options": {
      "database": "animationapp",
      "schema": "staticwebapp.database.schema.gql"
    }
  },
  "runtime": {
    "rest": { "enabled": true, "path": "/rest" },
    "graphql": { "enabled": true, "path": "/graphql" }
  },
  "entities": {
    "Products": {
      "source": "Products",
      "permissions": [ { "actions": ["read","create","update","delete"], "role": "anonymous" } ]
    },
    "Orders": {
      "source": "Orders",
      "permissions": [ { "actions": ["read","create"], "role": "anonymous" } ]
    }
  }
}

